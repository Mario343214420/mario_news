{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "信用App",
				"app-plus": {  
					"titleNView": false //禁用原生导航栏  
				}  
			}
		},
		{
			"path": "pages/register/register",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/register/tel",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/register/code",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/login/password",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/login/tel",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/login/code",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/user-center/user-center",
			"style": {
				"navigationBarTitleText": "用户中心"
			}
		},
		{
			"path": "pages/detail/detail",
			"style": {
				"navigationBarTitleText": "详情"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#DD524D",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#4c4c4c",
		"selectedColor": "#303133",
		"backgroundColor":"#FFFFFF",
		"fontSize": "60rpx",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页"
			},
			{
				"pagePath": "pages/detail/detail",
				"text": "详情"
			},
			{
				"pagePath": "pages/user-center/user-center",
				"text": "个人"
			}
		]
	}
}
